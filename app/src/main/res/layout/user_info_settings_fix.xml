<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"></LinearLayout>

    <RelativeLayout
        android:id="@+id/user_info_edit_container"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_settings_item_normal_height"
        android:background="@color/color_white">

        <TextView
            android:id="@+id/user_info_fix_left_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_settings_item_margin_left"
            android:text="昵称"
            android:textColor="@color/common_settings_item_left_text_color"
            android:textSize="@dimen/user_info_fix_lefttext_text_size" />

        <EditText
            android:id="@+id/user_info_fix_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_settings_item_margin_left"
            android:layout_toRightOf="@+id/user_info_fix_left_textview"
            android:background="@null"
            android:hint="请输入你的昵称"
            android:singleLine="true"
            android:textColor="@color/common_settings_item_right_text_color"
            android:textColorHint="@color/common_settings_item_right_text_color"
            android:textSize="@dimen/user_info_fix_lefttext_text_size" />

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/common_settings_item_line_smaller_height"
            android:layout_alignParentTop="true"
            android:background="@color/common_settings_item_line_color" />

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/common_settings_item_line_smaller_height"
            android:layout_alignParentBottom="true"
            android:background="@color/common_settings_item_line_color" />
    </RelativeLayout>

</LinearLayout>