<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical" >
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/first_lanunch_height_choose_height" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/LinearLayout1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" >

                    <RelativeLayout
                        android:id="@+id/RelativeLayout1"
                        android:layout_width="@dimen/first_lanunch_weight_girl_boy_icon_width"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true" >

                            <TextView
                                android:id="@+id/first_launch_height_num_textview"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="0.0"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/first_lanunch_weight_num_text_size"
                                android:gravity="right" />

                            <TextView
                                android:id="@+id/first_launch_height_unit_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="cm"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/first_lanunch_weight_unit_text_size" />
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" >
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4" >

                <com.inhand.milk.utils.ObservableScrollView
                    android:id="@+id/first_launch_height_scrollView"
                    android:layout_width="@dimen/first_lanunch_height_ruler_width"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/first_launch_ruler_y_bg"
                    android:scrollbars="none" >

                    <LinearLayout
                        android:id="@+id/first_launch_height_ruler_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    </LinearLayout>
                </com.inhand.milk.utils.ObservableScrollView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/first_lanunch_height_ruler_jt_margin_left"
                    android:layout_toRightOf="@id/first_launch_height_scrollView"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/first_launch_height_ruler_jt_ico"
                        android:layout_width="@dimen/first_lanunch_weight_ruler_jt_height"
                        android:layout_height="wrap_content"
                        android:src="@drawable/first_launch_height_ruler_jt_ico" />

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/first_lanunch_weight_girl_boy_icon_height"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/first_launch_height_icon_container"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom|right"
                    android:layout_weight="4"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/first_launch_height_icon_imageview"
                        android:layout_width="@dimen/first_lanunch_weight_girl_boy_icon_width"
                        android:layout_height="@dimen/first_lanunch_weight_girl_boy_icon_height"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="false"
                        android:scaleType="fitEnd"
                        android:src="@drawable/first_launch_weight_girl_icon" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>
