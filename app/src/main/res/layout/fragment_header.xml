<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:background="@drawable/header_bkg"
    android:gravity="start">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/header_title_marginTop"
        android:text="title"
        android:textColor="@color/default_ftg"
        android:textSize="@dimen/header_title_textSize" />

    <ImageView
        android:id="@+id/sliding_entry"
        android:layout_width="@dimen/sliding_icon_size"
        android:layout_height="@dimen/sliding_icon_size"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/menu_title_name"
        android:layout_marginStart="@dimen/sliding_marginStart"
        android:src="@drawable/common_sliding_icon" />

</RelativeLayout>