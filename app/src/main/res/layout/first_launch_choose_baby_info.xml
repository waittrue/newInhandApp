<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/first_lanunch_babysex_text_icon_height"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/first_launch_babyinfo_sex_icon"
            android:layout_width="@dimen/first_lanunch_babysex_text_icon_width"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/first_launch_boby_sex_text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/first_lanunch_babyinfo_icon_height">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/first_launch_baby_info_girl_icon"
                android:layout_width="@dimen/first_lanunch_babyinfo_icon_width"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="false"
                android:scaleType="centerInside"
                android:src="@drawable/first_launch_bobysex_girl_icon" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/first_launch_baby_info_boy_icon"
                android:layout_width="@dimen/first_lanunch_babyinfo_icon_width"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="false"
                android:scaleType="centerInside"
                android:src="@drawable/first_launch_bobysex_boy_icon" />

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/first_lanunch_selected_icon_height">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/first_launch_select_girl_icon"
                android:layout_width="@dimen/first_lanunch_babyinfo_icon_width"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="false"
                android:scaleType="centerInside"
                android:src="@drawable/first_launch_selected_ico" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/first_launch_select_boy_icon"
                android:layout_width="@dimen/first_lanunch_babyinfo_icon_width"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="false"
                android:scaleType="centerInside"
                android:src="@drawable/first_launch_selected_ico" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/first_lanunch_babysex_text_icon_height"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/first_launch_baby_info_birthday_icon"
            android:layout_width="@dimen/first_lanunch_babysex_text_icon_width"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/first_launch_boby_birthday_text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/first_lanunch_babysex_edittext_height">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.125"></RelativeLayout>

        <TextView
            android:id="@+id/first_launch_baby_info_birthday_textView"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.75"
            android:background="@drawable/first_launch_textview_corner"
            android:ems="10"
            android:gravity="center"
            android:text="@string/first_launch_choose_babysex_date"
            android:textColor="@color/first_launch_text_color"
            android:textSize="@dimen/first_lanunch_babyinfo_text_size" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.125"></RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/first_lanunch_babysex_text_icon_height"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/first_launch_baby_info_name_icon"
            android:layout_width="@dimen/first_lanunch_babysex_text_icon_width"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/first_launch_boby_name_text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/first_lanunch_babysex_edittext_height">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.125"></RelativeLayout>

        <EditText
            android:id="@+id/first_launch_baby_info_name_edittext"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.75"
            android:background="@drawable/first_launch_textview_corner"
            android:cursorVisible="true"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/first_launch_choose_babysex_name"
            android:textColor="@color/first_launch_text_color"
            android:textColorHint="@color/first_launch_text_color"
            android:textSize="@dimen/first_lanunch_babyinfo_text_size">

            <requestFocus />
        </EditText>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.125"></RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></LinearLayout>

</LinearLayout>
