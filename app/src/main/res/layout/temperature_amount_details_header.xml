<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/details_content_height"
    android:orientation="vertical"
    android:background="@color/details_content_header_background_color"
   >
   
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight = "1" >

        <TextView
            android:id="@+id/details_content_header_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="false"
            android:layout_centerVertical="true"
   		 	android:layout_marginBottom="@dimen/details_content_text_margin_bottom"
            android:layout_marginLeft="@dimen/details_content_margin_parent_left"
            android:textColor="@color/details_content_header_text_color"
            android:textSize="@dimen/details_content_header_title_text_size" />

    </RelativeLayout>
    
    
      <LinearLayout
        android:layout_width="match_parent"
         android:layout_height="@dimen/details_content_header_dividing_line_height"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/details_content_header_dividing_line_color" />
    </LinearLayout>

</LinearLayout>
