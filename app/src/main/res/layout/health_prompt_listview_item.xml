<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/health_prompt_listview_item_top_height"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/health_prompt_listview_item_circle_icon"
            android:layout_width="@dimen/health_prompt_listview_item_circle_r"
            android:layout_height="@dimen/health_prompt_listview_item_circle_r"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/health_prompt_listview_item_text_doc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/health_prompt_listview_item_margin_left_icon"
            android:layout_toRightOf="@+id/health_prompt_listview_item_circle_icon"
            android:gravity="center_vertical"
            android:textSize="@dimen/health_prompt_listview_text_size" />

        <TextView
            android:id="@+id/health_prompt_listview_item_text_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/health_prompt_listview_item_margin_right"
            android:layout_toLeftOf="@+id/health_prompt_listview_item_text_num"
            android:gravity="center_vertical"
            android:text="@string/health_prompt_listview_item_total"
            android:textSize="@dimen/health_prompt_listview_right_text_size" />

        <TextView
            android:id="@+id/health_prompt_listview_item_text_num"
            android:layout_width="@dimen/health_prompt_listview_item_num_text_width"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/health_prompt_corner_background"
            android:gravity="center"
            android:text="16æ¬¡"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/color_white"
            android:textSize="@dimen/health_prompt_listview_num_text_size" />
    </RelativeLayout>

    <TextView
        android:id="@+id/health_prompt_listview_item_text_long_doc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/health_prompt_corner_background"
        android:paddingBottom="@dimen/health_prompt_listview_item_long_text_maring_top"
        android:paddingLeft="@dimen/health_prompt_listview_item_long_text_margin_left_right"
        android:paddingRight="@dimen/health_prompt_listview_item_long_text_margin_left_right"
        android:paddingTop="@dimen/health_prompt_listview_item_long_text_maring_top"
        android:textSize="@dimen/health_prompt_listview_item_doc_textsize" />
</LinearLayout>