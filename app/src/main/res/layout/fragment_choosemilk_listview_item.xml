<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00ff00"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/choose_milk_fragment_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/choose_milk_fragment_listview_title_height"
        android:background="@color/user_info_settings_listview_item_title_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/choose_milk_fragment_listview_title_textview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="@dimen/choose_milk_fragment_listview_imageview_margin_left"
            android:autoText="false"
            android:gravity="left|center_vertical"
            android:text="Large Text"
            android:textColor="@color/user_info_settings_listview_item_title_text_color"
            android:textSize="@dimen/user_info_settings_city_title_text_size"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/choose_milk_fragment_content"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/choose_milk_fragment_listview_content_height"
        android:background="@color/color_white">

        <ImageView
            android:id="@+id/choose_milk_fragment_listview_divider"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/common_settings_item_line_smaller_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="false"
            android:layout_marginLeft="@dimen/choose_milk_fragment_listview_line_margin"
            android:background="@color/common_settings_item_line_color" />

        <ImageView
            android:id="@+id/choose_milk_fragment_listview_milk_icon"
            android:layout_width="@dimen/choose_milk_fragment_listview_imageview_width"
            android:layout_height="@dimen/choose_milk_fragment_listview_imageview_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/choose_milk_fragment_listview_imageview_margin_left"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/choose_milk_fragment_listview_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/choose_milk_fragment_listview_textview_margin_left"
            android:layout_toRightOf="@+id/choose_milk_fragment_listview_milk_icon"
            android:gravity="center"
            android:text="惠氏"
            android:textColor="@color/choose_milk_fragment_listview_content_text_color"
            android:textSize="@dimen/choose_milk_fragment_listview_content_text_size" />
    </RelativeLayout>
</LinearLayout>