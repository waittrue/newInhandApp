<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#f5f5f5"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:id="@+id/title"
        android:layout_height="wrap_content"></LinearLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/scrollView"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/person_center_info_container"
                android:layout_marginTop="@dimen/common_settings_item_margin_top"
                android:id="@+id/person_center_info_container"
                android:background="@color/color_white">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_settings_item_line_smaller_height"
                    android:src="@color/common_settings_item_line_color"
                    android:layout_alignParentTop="true" />

                <view
                    android:layout_width="@dimen/person_center_info_head_image_height_width"
                    android:layout_height="@dimen/person_center_info_head_image_height_width"
                    class="com.inhand.milk.utils.CircleImageView"
                    android:src="@drawable/ic_launcher"
                    android:id="@+id/view"
                    android:layout_marginLeft="@dimen/common_settings_item_margin_left"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_settings_item_line_smaller_height"
                    android:id="@+id/imageView6"
                    android:layout_alignParentBottom="true"
                    android:src="@color/common_settings_item_line_color" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:id="@+id/relativeLayout"
                    android:layout_marginLeft="@dimen/common_settings_item_margin_left"
                    android:layout_toRightOf="@+id/view" >

                    <TextView
                        android:id="@+id/person_center_user_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="宝宝妈妈"
                        android:textColor="@color/person_center_user_name_text_color"
                        android:textSize="@dimen/person_center_user_name_text_size" />

                    <TextView
                        android:id="@+id/person_center_user_special_doc_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/person_center_user_name_text"
                        android:layout_marginTop="@dimen/person_center_info_text_margin"
                        android:layout_alignLeft="@+id/person_center_user_name_text"
                        android:singleLine="true"
                        android:text="奶瓶账号:JJD22446"
                        android:textColor="@color/person_center_special_text_color"
                        android:textSize="@dimen/person_center_special_doc_text_size" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="@dimen/common_settings_item_text_size"
                    android:layout_height="@dimen/common_settings_item_text_size"
                    style="@style/common_settings_item_right_arrow" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_settings_item_margin_top"
                android:background="@color/color_white">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_settings_item_normal_height"
                    android:id="@+id/person_center_baby_info_container">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/common_settings_item_line_smaller_height"
                        android:src="@color/common_settings_item_line_color" />
                    <ImageView
                        android:id= "@+id/person_center_baby_info_icon"
                        style="@style/person_center_icon"
                        android:src = "@drawable/person_center_baby_info_ico"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/person_center_baby_info"
                        android:layout_toRightOf="@id/person_center_baby_info_icon"
                        style="@style/common_settings_item_left_text"/>
                    <ImageView
                        android:layout_width="@dimen/common_settings_item_text_size"
                        android:layout_height="@dimen/common_settings_item_text_size"
                        style="@style/common_settings_item_right_arrow" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/common_settings_item_line_smaller_height"
                        android:id="@+id/imageView8"
                        android:src="@color/common_settings_item_line_color"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/person_center_line_margin_left" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_settings_item_normal_height"
                    android:layout_below="@+id/person_center_baby_info_container"
                    android:id="@+id/person_center_baby_record_container">

                    <ImageView
                        android:layout_width="@dimen/common_settings_item_text_size"
                        android:layout_height="@dimen/common_settings_item_text_size"
                        style="@style/common_settings_item_right_arrow" />

                    <ImageView
                        android:id= "@+id/person_center_baby_record"
                        style="@style/person_center_icon"
                        android:src = "@drawable/person_center_baby_record_ico"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/person_center_baby_record"
                        android:layout_toRightOf="@id/person_center_baby_record"
                        style="@style/common_settings_item_left_text"/>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/common_settings_item_line_smaller_height"
                        android:id="@+id/imageView11"
                        android:src="@color/common_settings_item_line_color"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/person_center_line_margin_left" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_settings_item_normal_height"
                    android:layout_below="@+id/person_center_baby_record_container"
                    android:id="@+id/person_center_baby_milk_container">

                    <ImageView
                        android:layout_width="@dimen/common_settings_item_text_size"
                        android:layout_height="@dimen/common_settings_item_text_size"
                        style="@style/common_settings_item_right_arrow" />

                    <ImageView
                        android:id= "@+id/person_center_baby_milk"
                        style="@style/person_center_icon"
                        android:src = "@drawable/person_center_baby_milk"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/person_center_baby_milk"
                        android:layout_toRightOf="@id/person_center_baby_milk"
                        style="@style/common_settings_item_left_text"/>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/common_settings_item_line_smaller_height"
                        android:src="@color/common_settings_item_line_color"
                        android:layout_alignParentBottom="true" />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_settings_item_margin_top"
                android:background="@color/color_white">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_settings_item_normal_height"
                    android:id="@+id/percon_center_baby_device_container">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/common_settings_item_line_smaller_height"
                        android:src="@color/common_settings_item_line_color" />
                    <ImageView
                        android:id= "@+id/person_center_baby_device"
                        style="@style/person_center_icon"
                        android:src = "@drawable/person_center_device_ico"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/person_center_baby_device"
                        android:layout_toRightOf="@id/person_center_baby_device"
                        style="@style/common_settings_item_left_text"/>
                    <ImageView
                        android:layout_width="@dimen/common_settings_item_text_size"
                        android:layout_height="@dimen/common_settings_item_text_size"
                        style="@style/common_settings_item_right_arrow" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/common_settings_item_line_smaller_height"
                        android:src="@color/common_settings_item_line_color"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/person_center_line_margin_left" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_settings_item_normal_height"
                    android:layout_below="@+id/percon_center_baby_device_container"
                    android:id="@+id/person_center_syn_container">

                    <ImageView
                        android:layout_width="@dimen/common_settings_item_text_size"
                        android:layout_height="@dimen/common_settings_item_text_size"
                        style="@style/common_settings_item_right_arrow" />

                    <ImageView
                        android:id= "@+id/person_center_syn"
                        style="@style/person_center_icon"
                        android:src = "@drawable/person_center_syn_ico"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/person_center_baby_syn"
                        android:layout_toRightOf="@id/person_center_syn"
                        style="@style/common_settings_item_left_text"/>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/common_settings_item_line_smaller_height"
                        android:src="@color/common_settings_item_line_color"
                        android:layout_alignParentBottom="true" />
                </RelativeLayout>
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>